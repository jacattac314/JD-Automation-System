{
  "name": "jd-automation-system",
  "version": "1.0.0",
  "description": "Transform job descriptions into fully implemented GitHub projects",
  "main": "electron/main.js",
  "author": "JD Automation",
  "license": "MIT",
  "homepage": "https://github.com/jacattac314/JD-Automation-System",
  "repository": {
    "type": "git",
    "url": "https://github.com/jacattac314/JD-Automation-System.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder build --publish never",
    "build:win": "electron-builder build --win --publish never",
    "build:mac": "electron-builder build --mac --publish never",
    "build:linux": "electron-builder build --linux --publish never",
    "build:all": "electron-builder build -mwl --publish never",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "release": "electron-builder build --publish always"
  },
  "dependencies": {
    "electron-log": "^5.1.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.jdautomation.app",
    "productName": "JD Automation System",
    "copyright": "Copyright Â© 2024-2026 JD Automation",
    "compression": "maximum",
    "asar": true,
    "files": [
      "electron/**/*",
      "ui/**/*",
      "api/**/*",
      "modules/**/*",
      "core/**/*",
      "cli/**/*",
      "*.py",
      "!**/__pycache__",
      "!**/node_modules",
      "!**/.git",
      "!**/.DS_Store",
      "!**/dist",
      "!**/build",
      "!**/*.pyc",
      "!**/.env"
    ],
    "extraResources": [
      {
        "from": "python-dist",
        "to": "python",
        "filter": ["**/*"]
      },
      {
        "from": ".",
        "to": "app",
        "filter": [
          "api/**/*",
          "modules/**/*",
          "core/**/*",
          "cli/**/*",
          "ui/**/*",
          "*.py",
          "requirements.txt",
          "!**/__pycache__",
          "!**/*.pyc"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/assets/icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "publish": ["github"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JD Automation",
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "installerIcon": "electron/assets/icon.ico",
      "uninstallerIcon": "electron/assets/icon.ico",
      "installerHeaderIcon": "electron/assets/icon.ico",
      "license": "LICENSE"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "electron/assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "publish": ["github"]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "${productName} ${version}",
      "icon": "electron/assets/icon.icns",
      "background": null,
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/assets/icon.png",
      "category": "Development",
      "synopsis": "Job Description to Project Automation",
      "description": "Transform job descriptions into fully implemented GitHub projects using AI.",
      "desktop": {
        "Name": "JD Automation System",
        "Comment": "Transform job descriptions into projects",
        "Categories": "Development;Utility;"
      },
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "publish": ["github"]
    },
    "appImage": {
      "license": "LICENSE"
    },
    "publish": {
      "provider": "github",
      "owner": "jacattac314",
      "repo": "JD-Automation-System",
      "releaseType": "release"
    },
    "directories": {
      "output": "dist",
      "buildResources": "electron/assets"
    }
  }
}
